  "monitor_speed": 115200,
  "voltage": 3.3,
  "description": "ESP8266 NodeMCU V2 configuration",

  "pins": {
    "analog": {
      "A0": "ADC0 (only analog pin available)"
    },
    "digital": {
      "D0": "GPIO16",
      "D1": "GPIO5",
